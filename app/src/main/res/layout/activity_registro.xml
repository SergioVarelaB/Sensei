<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registro">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="474dp"
        android:layout_height="779dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/regnew" />

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="433dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="327dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Apellido"
                android:textColor="#F8000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="327dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="ContraseÃ±a"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Instituto"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="327dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="correo"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Telefono"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="327dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:inputType="phone" />

            <Button
                android:id="@+id/conocimientos"
                android:layout_width="327dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:onClick="conocimientos"
                android:text="conocimientos en:"
                android:textColor="#FC0A0000"
                tools:layout_editor_absoluteX="-19dp"
                tools:layout_editor_absoluteY="641dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:text="Registrarse" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>